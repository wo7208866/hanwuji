/* pages/mine/mine.wxss */

.title {
  width: 100%;
  background: black;
  height: 250px;
  position: relative;
  text-align: center;
}

.card-vip {
  width: 100%;
  height: 100%;
  position: relative;
}

.vip-bg1 {
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 0;
}

.user_pci {
  width: 70px;
  height: 70px;
  display: inline-block;
  border-radius: 50% 50%;
}

.vip {
  position: absolute;
  right: 50px;
  bottom: 40px;
  color: white;
  text-align: left;
  font-size: 10px;
}

.card-image {
  width: 50px;
  height: 50px;
}

.user {
  display: inline-block;
  text-align: center;
  width: 100%;
  z-index: 1000;
  position: relative;
  top: -180px;
  color: #fff;
}

.logo-img {
  transform: scale(0.3);
  position: absolute;
  top: -50px;
  left: -64px;
}

.logo-img image {
  background: rgba(0, 0, 0, 0);
}

.MyOrder-container {
  padding-bottom: 15px;
  font-size: 12px;
}

.MyOrder {
  background: white;
  width: 94%;
  padding-left: 3%;
  padding-right: 3%;
  display: inline-block;
  text-align: center;
  color: #bb9a6b;
}

.title-image {
  display: inline-block;
  width: 25px;
  height: 25px;
  vertical-align: middle;
  background: #fff;
  margin-top: -5px;
}

.small-scale image {
  transform: scale(0.7);
}

.last-price {
  padding-left: 3%;
  padding-right: 3%;
  text-align: right;
  font-size: 22px;
  color: #bb9a6b;
  margin-top: 20px;
  height: 150px;
}

.MyOrder-title {
  text-indent: 1em;
  text-align: left;
  padding-bottom: 10px;
  position: relative;
  font-size: 16px;
  height: 40px;
  line-height: 40px;
  border-bottom: solid 1px #ebebeb;
  vertical-align: middle;
}

.title-icon {
  position: absolute;
  right: 20px;
}

.MyOrder-item {
  display: inline-block;
  text-align: center;
  width: 24.8%;
}

.MyOrder-item view {
  position: relative;
  top: -7px;
}

.MyOrder-item image {
  width: 60px;
  height: 52px;
  display: inline-block;
  margin-top: 10px;
  background: #fff;
}

.credit {
  background: white;
  width: 94%;
  padding-left: 3%;
  padding-right: 3%;
  border-top: solid 5px #ebebeb;
  color:#9b9b9b;
}

.credit-title {
  text-indent: 1.5em;
  padding-bottom: 10px;
  font-size: 12px;
  height: 30px;
  line-height: 40px;
  border-bottom: solid 1px #ebebeb;
}

.navigator-hover {
  background: none !important;
}

.confirm-buy {
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  line-height: 50px;
}

.confirm-buy text {
  width: 50%;
  height: 50px;
  color: #fff;
  font-size: 16px;
  display: inline-block;
}

.green-btn {
  background: #333;
}

.red-btn {
  background:linear-gradient(to right,#DDCAA0,#BB9A6B);
}
