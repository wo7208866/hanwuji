.swiper_item {
  width: 100%;
  height: 400px;
}

.slide-image {
  width: 100%;
  height: 400px;
}

swiper {
  height: 400px;
}

.main_content {
  background: #ebebeb;
  color: black;
}

.submit {
  display: inline-block;
  width: 120px;
  font-size: 14px;
  font-weight: bold;
  color: white;
  background: orangered;
  position: absolute;
  right: 0;
  bottom: 0;
}

.open_sure {
  position: fixed;
  width: 100%;
  height: 250px;
  background: white;
  bottom: 0;
  z-index: 99999;
  border-top: 1px solid #eaeaea;
}

.confirm-body {
  width: 80%;
  height: 150px;
  margin-left: 10%;
  margin-top: 30px;
}

.confirm-content {
  display: inline-block;
}

.confirm-title {
  margin-top: 10px;
  font-size: 11pt;
}

.confirm-pic {
  height: 120px;
  width: 100px;
  display: inline-block;
  /* float: right; */
  margin-top: 10px;
}

.select-standard {
  display: inline-block;
  padding: 2px 10px;
  border: solid 1px #bb9a6b;
  margin-left: 40px;
  margin-bottom: 5px;
  margin-top: 10px;
  color: #bb9a6b;
  border-radius: 5px 5px;
}

.select-city {
  display: inline-block;
  padding: 2px 10px;
  border: solid 1px #ac0028;
  margin-left: 25px;
  margin-bottom: 5px;
  margin-top: 10px;
  color: #ac0028;
  border-radius: 5px 5px;
}

.confirm {
  display: inline-block;
  width: 100%;
  background: linear-gradient(to right, #ddcaa0, #bb9a6b);
  color: white;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 0 0;
}

.btn_box {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: -10rpx;
}

.product-detail, .size-box, .detail_address {
  padding: 40rpx;
  margin-bottom: 7px;
  background: #fff;
}
.last{
  margin-bottom: 88rpx;
}

.detail-label {
  width: 100%;
  position: relative;
}

.lable-text {
  font-size: 11pt;
  color: #ae896a;
  display: inline-block;
  max-width: 85%;
}

.label-sign {
  position: absolute;
  display: inline-block;
  padding: 0 5px;
  right: 0px;
  top: 0;
  font-size: 11pt;
  border-radius: 2px 2px;
  color: #ac0028;
  border: solid 0.5px #ac0028;
}

.product-name {
  margin-top: 10px;
  font-size: 17pt;
}

.product-price {
  color: #bb9a6b;
  font-size: 17pt;
}

.size-box {
  font-size: 14px;
}

.size-item text {
  display: inline-block;
  padding: 2px 10px;
  border: solid 1px #aeaeae;
  margin-right: 20px;
  margin-bottom: 5px;
  margin-top: 10px;
  color: #aeaeae;
  border-radius: 5px 5px;
}

.size-item .active {
  color: #bb9a6b;
  border-color: #bb9a6b;
}

.address-tip {
  position: relative;
  height: 30px;
  line-height: 30px;
}

.adress_city {
  font-size: 14px;
  position: absolute;
  left: 0;
}

.adress_no {
  font-size: 10px;
  position: absolute;
  right: 0px;
  color: #9b9b9b;
}

.city-select {
  display: inline-block;
  font-size: 14px;
  font-weight: normal;
  width: 60%;
  height: 20px;
  line-height: 20px;
  border-right: solid 1px black;
  padding-left: 20px;
  overflow-x: scroll;
  margin-top: 5px;
}

.detail-footer {
  position: fixed;
  bottom: 0;
  height: 50px;
  width: 100%;
  display: inline-block;
  text-align: center;
  z-index: 555;
}

.footer-item1, .footer-item2 {
  width: 19%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
  position: relative;
}

.badge {
  position: absolute;
  top: 8px;
  right: 20px;
}

.footer-space {
  width: 2%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
  background: #222;
}

.space-line {
  height: 28px;
  margin-top: 12px;
  border-left: 1pt solid #ae896a;
}

.footer-item3 {
  width: 60%;
  height: 50px;
  display: inline-block;
  background: linear-gradient(to right, #ddcaa0, #bb9a6b);
  color: white;
  vertical-align: top;
  line-height: 50px;
  font-size: 18px;
  text-align: center;
}

.detail-footer image {
  width: 75%;
  height: 50px;
  background: #222;
  transform: scale(1.5);
  -ms-transform: scale(1.5);
  -webkit-transform: scale(1.5);
  -o-transform: scale(1.5);
  -moz-transform: scale(1.5);
}

.f-active image {
  background: #6b1a19 !important;
}

.footer-item navigator {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.detail-footer navigator {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.product-pic {
  width: 100%;
  background: white;
}

.picker {
  position: relative;
  display: inline-block;
  min-width: 120px;
  border: solid 1px black;
  border-radius: 4px 4px;
  height: 30px;
  line-height: 30px;
}

.picker image {
  width: 15px;
  height: 15px;
  position: absolute;
  top: 8px;
  right: 5px;
  background: #fff;
}

.bg {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}

.product-pic image {
  width: 100%;
}

.decrite-select view {
  padding: 2px 10px;
  margin-top: 10px;
  color: #aeaeae;
  border-radius: 5px 5px;
  display: inline-block;
  border: solid 1px #aeaeae;
  margin-right: 20px;
  font-size: 12px;
}

.decrite-active {
  color: #bb9a6b !important;
  border-color: #bb9a6b !important;
}

.pickerInner{
  border:1px solid #9b9b9b;
  width: 28%;
  border-radius: 10rpx;
}
picker{
  padding: 2rpx;
  height: 50rpx;
}
picker text{
  border-right: 1px solid #a8a8a8;
  padding: 0 25rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #353535;
}
.AddBtn{
  width: 35rpx;
  height: 35rpx;
  position: relative;
  top:10rpx;
  left: 15rpx;
}
