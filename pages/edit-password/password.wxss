/* pages/edit-password/password.wxss */
page{
  background: #ebebeb;
}
.edit-password{
  height: 55px;
  line-height:55px;
  border-top: #e0e0e0 solid 1px;
  padding: 0 30px;
  background: #fff;
}
.edit-password view{
  width: 25px;
  height: 55px;
  display: inline-block;
  margin-right: 20px;
}
.edit-password image{
  width: 25px;
  height: 25px;
 vertical-align: middle;
}
.edit-password input{
  width: 200px;
  height: 100%;
  display: inline-block;
  vertical-align: top;
  color: #a08069;
}
.pass-tip{
  padding-left: 30px;
  line-height: 30px;
  font-size: 12px;
  color: #a08069;
}
.submit-pass{
  text-align: center;
}
.submit-pass button{
  display: inline-block;
  width: 80%;
  margin-top: 50px;
  background:linear-gradient(to right,#DDCAA0,#BB9A6B);
  color: #fff;
}