/* pages/cart/cart.wxss */

page {
  background: white;
  /* font-size: 37.5px;  */
}

.J-shopping-cart-empty {
  margin: 0;
  padding: 0;
  /* border: 0; */
  font: inherit;
  font-size: 100%;
  vertical-align: baseline;
  background: white;
  width: 100%;
  height: 100%;
  border: 1px solid transparent;
}

.shooping-cart-empty-title image {
  width: 150px;
  height: 100%;
  margin-left: -30px;
  background: rgba(0, 0, 0, 0);
}

.shopping-cart-empty {
  height: 250px;
  padding-top: 3.2rem;
  padding-bottom: 1.6rem;
  background-color: #fff;
  text-align: center;
  position: relative;
  display: flex;
  flex-direction: column;
}

.shooping-cart-empty-title {
  width: 100%;
  height: 100rpx;
  margin-top: 20px;
  background: #ebebeb;
  display: flex;
}
.shooping-cart-empty-title image{
  position: relative;
  left: -50rpx;
}
.shooping-cart-empty-title text {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #b2b2b2;
  box-sizing: border-box;
  position: absolute;
  right: 80rpx;
}

.shopping-cart-empty text {
  font-size: 36rpx;
  height: 50rpx;
  color: #b2b2b2;
}

.empty-text {
  font-size: 0.64667rem;
  color: #222;
  margin-top: 0.53333rem;
  line-height: 0.74667rem;
  font-weight: 400;
}

.button-primary {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background:linear-gradient(to right,#DDCAA0,#BB9A6B);
  text-align: center;
  border-radius: 0.21267rem;
  margin-top: 50px;
  font-size: 32rpx;
}

.cart_container {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-bottom: 10rpx;
  width: 95%;
  margin-left: 2.5%;
  height: 150px;
}

.scroll {
  background: #f3f4f5;
}

.column {
  display: flex;
  flex-direction: column;
}

.sku {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}

.sku-price {
  color: red;
  position: relative;
  margin-top: 20rpx;
}

.price {
  color: red;
  position: relative;
}

.title {
  font-size: 11pt;
  margin-top: 20px;
  margin-bottom: 5px;
  color: #353535;
}

.standard {
  margin-top: 4px;
  color: #aeaeae;
  width: 100px;
  text-align: left;
  font-size: 13px;
}

.price {
  font-size: 11pt;
  margin-top: 10px;
  color: #888;
}

.small_text {
  font-size: 14px;
  width: 50%;
  display: inline-block;
  text-align: center;
  color: #ae896a;
}

.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 120rpx;
  margin-left: 20rpx;
}

.item-image {
  width: 180rpx;
  height: 120px;
  margin: 20rpx;
  margin-left: 20px;
}

.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}

.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 45px;
  line-height: 45px;
  background: white;
  /* margin-top: 300rpx; */
  border-top: 1rpx solid #ccc;
  z-index: 99;
}

.button-red {
  background: linear-gradient(to right, #ddcaa0, #bb9a6b);
  /* float: right; */
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 14px;
  border-radius: none;
  width: 50%;
  height: 45px;
  line-height: 45px;
  /* border: 1rpx solid #ccc; */
}

.footer {
  position: fixed;
  bottom: 0;
  height: 70px;
  width: 100%;
  display: inline-block;
  text-align: center;
  z-index: 9999;
}

.footer-item {
  width: 33.3%;
  height: 100%;
  display: inline-block;
  background: #222;
}

.footer-item image {
  width: 100%;
  height: 100%;
  background: #222;
}

.f-active image {
  background: #6b1a19 !important;
}

.footer-item navigator {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.Edit {
  width: 100%;
  height: 40px;
  background: white;
}

.Edit-line {
  width: 95%;
  margin-left: 2.5%;
  height: 35px;
  line-height: 35px;
  border-bottom: 1px solid #9b9b9b;
}

.Edit-line text {
  float: right;
  margin-right: 5px;
  color: #ae896a;
}

.cart_item {
  width: 100%;
  height: 150px;
  background: #fff;
}

.separate {
  width: 100%;
  height: 10rpx;
  background: #f3f4f5;
}

.separate-big {
  width: 100%;
  height: 150px;
  background: #f3f4f5;
}

.none-title {
  height: 20px;
  width: 100%;
  font-size: 11pt;
  background: #f3f4f5;
}

.none-title text {
  margin-left: 20px;
  height: 20px;
  line-height: 20px;
}

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}

.modal-content {
  padding: 50rpx 32rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  background: #353535;
  color: white;
  font-size: 11pt;
  text-align: center;
}

.btn-confirm {
  width: 50%;
  background:linear-gradient(to right,#DDCAA0,#BB9A6B);
  color: white;
  font-size: 11pt;
  text-align: center;
}

.tip-confirm {
  width: 100%;
  background: #222;
  color: white;
  font-size: 11pt;
  text-align: center;
}

.cart_left {
  height: 100%;
  width: 10%;
}

.cart_right {
  height: 100%;
  width: 90%;
  display: flex;
  flex-direction: row;
}
