/* pages/myOrder/order.wxss */

page {
  background: white;
}

.top-bar {
  height: 50px;
  border-top: solid 1px #c7c7c7;
  border-bottom: solid 1px #c7c7c7;
  line-height: 50px;
  display: inline-block;
  width: 100%;
  text-align: center;
  background: #fff;
}

.top-bar view {
  line-height: 50px;
  height: 100%;
  font-size: 12px;
  color: black;
  width: 25%;
  display: inline-block;
  text-align: center;
  box-sizing: border-box;
}

.top-bar view text {
  display: inline-block;
  height: 50px;
  padding: 0 5px;
}

.pro-list {
  padding: 50rpx;
  /* height: 124px; */
  background: #fff;
}

.list-item {
  display: inline-block;
  height: 140px;
  vertical-align: top;
}

.list-img {
  width: 40%;
  overflow: hidden;
}

.list-img image {
  width: 100%;
  /* height: 140px; */
  background: #c7c7c7;
}

.list-detail {
  width: 50%;
  height: 112px;
  padding: 5%;
}

.list-name {
  font-size: 32rpx;
  color: black;
  margin-bottom: 15px;
}

.list-base, .list-select {
  font-size: 12px;
  color: #bb9a6b;
  margin-bottom: 5px;
}

.bottom-detail {
  border-top: solid 1px #d6d6d6;
  height: 45px;
  line-height: 45px;
  padding-left: 30px;
  padding-right: 10px;
  position: relative;
  background: #fff;
}

.bottom-detail button {
  display: inline-block;
}

.list-order-time {
  width: 20%;
  color: black;
  font-size: 16px;
  margin-right: 10px;
}

.come .btn-box {
  width: 100%;
  text-align: right;
  display: inline-block;
  position: absolute;
  right: 10px;
  top: 5px;
}

.come .btn-box navigator, .recevier .btn-box navigator {
  margin-right: 5px;
}

.come .list-order-btn, .recevier .list-order-btn {
  padding: 0;
  color: #9b9b9b;
  margin-right: 8px;
}

.come .list-order-btn, .come .btn-box navigator {
  display: inline-block;
  padding: 0 15px;
  text-align: center;
  font-size: 10px;
  border-radius: 20px 20px;
  height: 20px;
  border: solid 1px #b8b8b8;
  background: white;
  line-height: 18px;
}

.bar-active {
  box-sizing: border-box;
  border-bottom: solid 2px #a0806b;
}

.recevier .btn-box {
  width: 280px;
  text-align: right;
  display: inline-block;
  position: absolute;
  right: 10px;
  top: 5px;
}

.button-hover {
  background:linear-gradient(to right,#DDCAA0,#BB9A6B)!important;
  color: white !important;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}

.modal-content {
  padding: 50rpx 32rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  background: #353535;
  color: white;
  font-size: 11pt;
  text-align: center;
}

.btn-confirm {
  width: 50%;
  background: linear-gradient(to right, #ddcaa0, #bb9a6b);
  color: white;
  font-size: 11pt;
  text-align: center;
}

.tip-confirm {
  width: 100%;
  background: #222;
  color: white;
  font-size: 11pt;
  text-align: center;
}
