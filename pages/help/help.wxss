/* pages/help/help.wxss */

.help-list text {
  display: inline-block;
  color: #999;
}

.help-img {
  width: 100%;
}

.help-img image {
  width: 100%;
  height: 200px;
}

.help-text1 {
  width: 85%;
  text-indent: 3em;
  text-align: left;
}

.help-text3 {
  width: 30%;
  text-align: center;
}

.help-list {
  height: 450px;
  background: #fff;
}

.help-list image {
  width: 20rpx;
  height: 20rpx;
}

.help-list view {
  height: 40px;
  line-height: 40px;
  border-bottom: solid 1px #e0e0e0;
}

.inline-help {
  position: relative;
  overflow: hidden;
}

.inline-help button {
  width: 120%;
  background: rgba(0, 0, 0, 0);
  border-color: rgba(0, 0, 0, 0);
  color: rgba(0, 0, 0, 0);
  height: 120%;
  position: absolute;
  top: -10%;
  padding: 0;
  left: -10%;
}
