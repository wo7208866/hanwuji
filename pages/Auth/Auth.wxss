/* pages/Auth/Auth.wxss */
.content{
  width:100%;
  height:200px;
  margin-top:100px;
  display:flex;
  align-content: center;
  justify-content: center;
}
page{
  background: #fff;
  height: 500rpx;
  overflow: hidden;
}
.name{
  font-size: 36rpx;
}
.content image{
  width:150px;
  height:150px;
}
.auth-box{
  text-align: center;
}
.user-img{
  width: 80%;
  height: 300rpx;
  display: inline-block;
  border-bottom: 1px solid #f0f0f0;
}
.user-img image{
  width: 160rpx;
  height: 160rpx;
}
.tip-auth{
  color: #5a5a5a;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.tipTitle{
  font-size: 32rpx;
  text-align: left;
  color: #000;

}
.tipContainer{
  padding: 80rpx;
  text-align: left;
  height: 300rpx;
}

.auth-btn{
  width: 100%;
  background: #00bf00;
  color: white;
  margin-top: 50px;
  font-size: 32rpx;
}