/* pages/invite/invite.wxss */

.baner-img image{
  width: 100%;
  height: 100px;
}
.rule-text,.invite-num{
  padding: 10px 6%;
  
  background: #fff;
}
.rule-text{
  color: black;
  font-size: 12px;
  line-height: 28px;
}
.red-font{
    color: #d20000!important;
}
.rule-item4 view{
  padding-left: 13px;
}
.rule-title{
  font-size: 14px;
  font-weight: bold;
}
.invite-num{
  margin-top: 8px;
}
.rule-text text{
  font-size: 14px;
  color: black;
}
.personal-invite{
  text-align: center;
  height: 90px;
  line-height: 90px;
}
.personal-invite invite-num-1{
  display: inline-block;
  width: 120px;
  vertical-align: middle;
  font-size: 28rpx;
}
.invite-friend{
  color: #bb9a6b;
  font-size: 28rpx;
  text-decoration: underline;
  margin-left: 20px;
}
.personal-invite input{
  width: 150px;
  display: inline-block;
  border-bottom: solid 1px #9b9b9b;
  height: 25px;
  margin-top: 23px;
  text-align: left;
}
.save input{
  width: 73%;
  color: black;
  height: 35px;
  border: #9b9b9b solid 1px;
  border-radius: 5px 5px;
  margin-top: 10px;
  text-align: center;
  margin-bottom: 10px;
}

.invite-tip{
  color: #a27f6b;
  font-size: 12px;
}
.invite-title{
  font-size: 16px;
  color: black;
}
.submit-box input{
  display: inline-block;
  vertical-align: middle;
  
  margin-right: 6%;
}
.submit-box text{
  width: 20%;
  vertical-align: middle;
  background:linear-gradient(to right,#DDCAA0,#BB9A6B);
  color: white;
  text-align: center;
  font-size: 14px;
  height: 29px;
  display: inline-block;
  line-height: 29px;
  border-radius: 2px 2px;

}
.submit-box{
  width: 100%;
}
.footer{
  height: 200px;
  background: #fff;
}