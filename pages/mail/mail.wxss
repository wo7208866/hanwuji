
.pro-list{
  padding:50rpx 40rpx;
  background: #fff;
}
.list-item{
  display: inline-block;
  height: 190px;
  vertical-align: top;
}
.list-img{
  width: 40%;
}
.list-img image{
  width: 100%;
  height: 180px;
  background: #c7c7c7;
}
.list-detail{
  width: 54%;
  height: 142px;
  padding-top: 5%;
  padding-left: 5%;
  
}
.list-name{
  font-size: 32rpx;
  color: black;
  margin-bottom: 5px;
}
.list-base,.list-select{
  font-size: 12px;
  color: #a0806b;
}
.list-base{
  margin-top: 20px;
}
.send-step{
  padding: 30px;
  text-align: center;
  background: white;
  height: 400px;
}
.step-item{
  display: inline-block;
  width: 80%;
  min-height: 80px;
  text-align: left;
  line-height: 25px;
  padding-left: 30px;
  font-size: 14px;
  position: relative;
  border-left: 1px solid #c7c7c7;
}
.send-active{
  
  color: #a0806b;
}
.icon-active{
  background: #ad9b8f!important;
}
.send-time{
  margin-left: 10px;
}
.step-icon{
  position: absolute;
  width: 16px;
  height: 16px;
  border-radius: 50% 50%;
 background: #9b9b9b;
  top: 0;
  left: -8px;
}
.step-item-num{
  border-bottom: dashed 1px #9b9b9b;
  height: 80%;
  padding: 10px 0;
}
.size-infor{
  border: solid 1px #a0806b;
  border-radius: 3px 3px;
  display: inline-block;
  padding: 2px 5px;
  color: #a0806b;
  font-size: 13px;
}



