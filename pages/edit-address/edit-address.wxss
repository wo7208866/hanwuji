/* pages/edit-address/edit-address.wxss */

page {
  background: #ebebeb;
}

.add-view {
  padding: 15px 30px;
  background: #fff;
  border-top: solid 1px #ebebeb;
  margin-bottom: 5px;
  color: black;
  position: relative;
}

.add-view input {
  width: 70%;
  height: 100%;
  display: inline-block;
  vertical-align: middle;
}

.city-for {
  position: absolute;
  right: 30px;
  font-weight: bold;
  font-size: 18px;
}

.defult-adress {
  padding: 15px 30px;
  font-size: 12px;
  color: #a0806b;
}

.add-address-save {
  color: white;
  background: linear-gradient(to right, #ddcaa0, #bb9a6b);
  text-align: center;
  font-size: 16px;
  height: 50px;
  width: 100%;
  line-height: 50px;
  position: fixed;
  bottom: 0;
}

picker {
  display: inline-block;
  width: 60%;
  vertical-align: middle;
  position: relative;
  top: -2px;
}
