/* pages/personalFile/personal.wxss */
.welcome{
  width: 55%;
  height: 350rpx;
  color: #ad907e;
  font-size: 22rpx;
  background: rgba(0, 0, 0, 0);
  position: absolute;
  padding-top: 40rpx;
  top: 0;
  margin-left: 45%;
  line-height: 40rpx;
  overflow: hidden;
}
.wel-text{
  width: 100%;
  margin-bottom: 5px;
}
.welcome view{
  display: inline-block
}
.wel-tip{
  width: 100%;
  height: 120rpx;
}
.infor-list text{
  display: inline-block;

}
.text1{
  width:60%;
  text-indent: 2em;
  text-align: left;
  color: #bb9a6b;
  height: 100%;
  vertical-align: middle;
}
.text2{
  width: 100%;
  text-align: left;
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  color: #9b9b9b;
}
.inp-text2{
  width: 100%;
  text-align: left;
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.infor-list{
  height: 450px;
  background: #fff;
}
.infor-list view{
  height: 40px;
  line-height: 40px;
  border-bottom: solid 1px #e0e0e0;
}
.wel-bg{
  width: 100%;
  height: 160px;
}
picker{
  display: inline-block;
  width: 30%;
  position: relative;
}
picker image{
  width: 15%;
  height: 30rpx;
  background: #fff;
  position: absolute;
  top: 25rpx;
}
.listContainer{
  width: 100%;
  display: flex;
}
.inputInner{
  width: 20%;
}
.pickerInput{
  width:75%;
}
.save{
  height: 45px;
  background:linear-gradient(to right,#DDCAA0,#BB9A6B);
  position: fixed;
  bottom: 0;
  width:100%;
  color: white;
  text-align: center;
  line-height: 45px;
  z-index: 2;
}
