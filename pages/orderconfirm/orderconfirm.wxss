/* pages/orderconfirm/orderconfirm.wxss */
page{
  background: white;
}
.address{
  width:100%;
  height:90px;
  border-top:1rpx solid #b2b2b2;
  display: flex;
  flex-direction: row;
  background: white;
  margin-top:20px;
}
.left{
  width: 80%;
  height:90px;
  display: flex;
  flex-direction: column;
}
.row{
  width:100%;
  height:45px;
  line-height: 60px;
  margin-left:30px;
  font-size:11pt;
  color:#353535;
}
.row2{
  width:100%;
  height:45px;
  line-height: 35px;
  margin-left:30px;
  font-size:13px;
  color:#b2b2b2;
}
.right{
  width:20%;
  height:90px;
  display: flex;
  align-items: center;
  justify-content: center; 
}
.space{
  width:100%;
  height:10px;
  background: #f3f4f5;
}
.content{
  width:100%;
  height:250px;
  display: flex;
  flex-direction: row;
}
.content-left{
  width:40%;
  height:100%;
}
.content-left image{
  width: 120px;
  height: 180px;
  margin-left:30px;
  margin-top:30px;
}
.content-right{
  width:59%;
  height:100%;
  display: flex;
  flex-direction: column;
}
.content-line1{
  margin-top:40px!important;
  color: #363636!important;
  font-size: 32rpx!important;
}
.content-right text{
  margin-left:20px;
  font-size:11pt;
  color:#b2b2b2;
  margin-top:8px;
}
.standard{
  /* padding: 2px 10px; */
  /* border: solid 1px #aeaeae; */
  margin-right: 20px;
  margin-bottom: 5px;
  margin-top: 10px;
  color: #aeaeae;
  /* border-radius: 5px 5px; */
  width:200rpx;
  text-align: left;
}
.Confirm{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  background:linear-gradient(to right,#DDCAA0,#BB9A6B);
  font-size:32rpx;
  color:white;
  text-align: center;
  position: fixed;
  bottom: 0;
  border-radius: 0;
}
.price{
  color:#A0806A!important;
}
