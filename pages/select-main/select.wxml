      <text class="condition-button{{condition[9]}}" bindtap="Condition3" data-index="9" data-text="薄款">薄款</text>
      <text class="condition-button{{condition[10]}}" bindtap="Condition3" data-index="10" data-text="常规" style="margin-left:10px;">常规</text>
      <text class="condition-button{{condition[11]}}" bindtap="Condition3" data-index="11" data-text="厚款" style="margin-left:10px;">厚款</text>
    </view>
  </view>
  <view class="drawer-content" style="margin-top:20px;">
    <text class="title">版型</text>
