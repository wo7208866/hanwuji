  </view>
  <view class="drawer-content" style="margin-top:20px;">
    <text class="title">适用季节</text>
    <view class="condition">
      <text class="condition-button{{condition[25]}}" bindtap="Condition8" data-index="25" data-text="四季">四季</text>
      <text class="condition-button{{condition[26]}}" bindtap="Condition8" data-index="26" data-text="冬季" style="margin-left:10px;">冬季</text>
      <text class="condition-button{{condition[27]}}" bindtap="Condition8" data-index="27" data-text="春秋季" style="margin-left:10px;">春秋季</text>
      <text class="condition-button{{condition[28]}}" bindtap="Condition8" data-index="28" data-text="夏季" style="margin-top:10px;">夏季</text>
