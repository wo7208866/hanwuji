      <text class="condition-button{{condition[14]}}" bindtap="Condition5" data-index="14" data-text="戗驳头">戗驳头</text>
      <text class="condition-button{{condition[15]}}" bindtap="Condition5" data-index="15" data-text="平驳头" style="margin-left:10px;">平驳头</text>
